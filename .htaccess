DirectoryIndex index.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # API Routes - Public (no auth)
    RewriteCond %{REQUEST_URI} ^/api/public/
    RewriteRule ^api/public/(.*)$ php-backend/public-api.php [L,QSA]
    
    # API Routes - Stripe
    RewriteCond %{REQUEST_URI} ^/api/stripe/
    RewriteRule ^api/stripe/(.*)$ php-backend/stripe.php [L,QSA]
    
    # API Routes - Cryptomus
    RewriteCond %{REQUEST_URI} ^/api/cryptomus/
    RewriteRule ^api/cryptomus/(.*)$ php-backend/cryptomus.php [L,QSA]
    
    # API Routes - CoinGate
    RewriteCond %{REQUEST_URI} ^/api/coingate/
    RewriteRule ^api/coingate/(.*)$ php-backend/coingate.php [L,QSA]
    
    # Don't rewrite if accessing index.php directly
    RewriteCond %{REQUEST_URI} ^/index\.php$
    RewriteRule ^ - [L]
    
    # Don't rewrite if file exists (images, CSS, JS, etc)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Don't rewrite if directory exists
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Route everything else to index.php
    RewriteRule ^ index.php [L]
</IfModule>

# Disable directory browsing
Options -Indexes

# Enable follow symlinks
Options +FollowSymLinks
